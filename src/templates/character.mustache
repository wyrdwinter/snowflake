            <div class="block">
              <p><strong>Defense</strong></p>
              <ul>
                <li>Hit Points: {{ character.hit-points.total.current }} / {{ character.hit-points.total.maximum }}</li>
                <li>Armor Class: {{ character.armor.armor-class.total }}</li>
                <li>Spell Resistance: {{ character.spell-resistance }}</li>
              </ul>
            </div>
            <div class="block">
              <p><strong>Saving Throws</strong></p>
              <ul>
                <li>Fortitude: {{ character.saving-throws.fortitude.total }}</li>
                <li>Reflex: {{ character.saving-throws.reflex.total }}</li>
                <li>Will: {{ character.saving-throws.will.total }}</li>
              </ul>
            </div>
            <div class="block">
              <p><strong>Offense</strong></p>
              <ul>
                <li>Base Attack Bonus: {{ character.attacks.base-attack-bonus }}</li>
              </ul>
            </div>
            <div class="block">
              <p><strong>Armor</strong></p>
              <ul>
                <li>Arcane Spell Failure: {{ character.armor.arcane-spell-failure }}%</li>
                {{ #character.armor.check-penalty }}
                <li>Armor Check Penalty: -{{ character.armor.check-penalty }}</li>
                {{ /character.armor.check-penalty }}
                {{ ^character.armor.check-penalty }}
                <li>Armor Check Penalty: 0</li>
                {{ /character.armor.check-penalty }}
              </ul>
            </div>
          </div>
