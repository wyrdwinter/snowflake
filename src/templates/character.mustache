{{> start-character }}
    {{> nav }}
    <div id="character-container" class="container">
      <section id="title">
        <div class="level">
          <div class="level-left">
            <div class="level-item">
              <h1 id="name">{{ character.first-name }} {{ character.last-name }}</h1>
            </div>
          </div>
          <div class="level-right">
            <div class="level-item">
              {{{ tags }}}
            </div>
          </div>
        </div>
      </section>
      <section id="core">
        <div id="portrait" class="card">
          <header class="card-header">
            <p class="card-header-title">
              Portrait
            </p>
          </header>
          <div class="card-image">
            <figure class="image">
              <div id="portrait-container">
                {{ #portrait }}<img src="data:image/png;base64,{{ portrait }}">{{ /portrait }}
                {{ ^portrait }}<img src="{{ portrait-default }}">{{ /portrait }}
              </div>
            </figure>
          </div>
        </div>
        <div id="overview" class="card">
          <header class="card-header">
            <p class="card-header-title">
              Overview
            </p>
          </header>
          <div class="card-content">
            <div class="block">
              <p><strong>Features</strong></p>
              <ul>
                <li>Race: {{ character.race.name }}</li>
                {{ #character.subrace }}<li>Subrace: {{ character.subrace }}</li>{{ /character.subrace }}
                <li>Sex: {{ character.sex.name }}</li>
              </ul>
            </div>
            <div class="block">
              <p><strong>Classes</strong></p>
              <ul>
                <li><img class="class-icon" src="/images/icons/{{ character.classes.first.tooltip-icon }}.jpg"><span class="class-name">{{ character.classes.first.name }}: {{ character.classes.first.levels }}</span></li>
                {{ #character.classes.second }}
                <li><img class="class-icon" src="/images/icons/{{ character.classes.second.tooltip-icon }}.jpg"><span class="class-name">{{ character.classes.second.name }}: {{ character.classes.second.levels }}</span></li>
                {{ /character.classes.second }}
                {{ #character.classes.third }}
                <li><img class="class-icon" src="/images/icons/{{ character.classes.third.tooltip-icon }}.jpg"><span class="class-name">{{ character.classes.third.name }}: {{ character.classes.third.levels }}</span></li>
                {{ /character.classes.third }}
              </ul>
            </div>
            <div class="block">
              <p><strong>Alignment</strong></p>
              <ul>
                <li>{{ character.alignment.name }} {{ #character.alignment.title }}({{ character.alignment.title }}){{ /character.alignment.title }}</li>
                <li>Chaos - Law: {{ character.alignment.position-law-chaos }}%</li>
                <li>Evil - Good: {{ character.alignment.position-good-evil }}%</li>
              </ul>
            </div>
            <div class="block">
              <p><strong>Experience</strong></p>
              <ul>
                <li>Current: {{ character.experience.current }}</li>
                <li>Next Level: {{ #character.experience.max-level }}Maximum Level{{ /character.experience.max-level }}{{ ^character.experience.max-level }}{{ character.experience.next-level }}{{ /character.experience.max-level }}</li>
              </ul>
            </div>
          </div>
        </div>
